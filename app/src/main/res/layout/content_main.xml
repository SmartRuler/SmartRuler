<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.smartruler.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/grey_60000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="280dp"
                android:layout_marginStart="280dp"
                android:text="h : 1.50m"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/show_H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="280dp"
                android:layout_marginStart="280dp"
                android:text="H : 0.00m"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/show_h_plus_H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="280dp"
                android:layout_marginStart="280dp"
                android:text="h+H = 1.50m"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey_60000000"/>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/scan_window">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scanner_line"
                    android:src="@drawable/cross"
                    android:layout_centerInParent="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"/>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/white"/>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey_60000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_60000000"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/orientation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="@string/distance"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/measurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50sp"
                android:textColor="@color/white"/>
            <ImageButton
                android:id="@+id/changeOrientation"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_60000000"
            android:orientation="horizontal"/>

    </LinearLayout>



</RelativeLayout>
